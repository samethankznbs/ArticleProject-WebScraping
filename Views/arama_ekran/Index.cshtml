@{
    ViewData["Title"] = "Admin Giriş Paneli";
}
<style>
    body {
        background-color: sandybrown;
    }



    .sidebar a {
        padding: 6px 8px 6px 16px;
        text-decoration: none;
        font-size: 20px;
        color: #000;
        display: block;
    }

        .sidebar a:hover {
            background-color: #ddd; /* Fare üstüne gelindiğinde arka plan rengi */
        }

    h1 {
        color: brown; /* Başlık rengi */
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        font-size: 60px;
    }

    label {
        display: block;
        width: 600px;
        margin-bottom: 30px;
        color: wheat;
    }

    .button-background {
        margin-top: 70px;
        width: 350px;
        height: 500px;
        background-image: url('https://i.pinimg.com/474x/2b/8e/c7/2b8ec79c3c2089327341d3d9fd132116.jpg');
        background-size: cover;
        background-position: top;
        /* Yuvarlak bir arka plan oluşturmak için */
        flex-shrink: 0; /* Boyutun küçülmemesini sağla */
    }

    input[type="submit"] {
        width: 600px; /* Genişlik */
        height: 40px; /* Yükseklik */
        background-color: wheat; /* Arka plan rengi */
        color: black; /*Yazı rengi */
        border: none; /* Kenarlık olmadan */
        border-radius: 5px; /* Kenar yuvarlama */
        cursor: pointer; /* Fare üzerine gelince işaretçi tipi */
        margin-top: 10px; /* Butonlar arası boşluk */
        font-size: 16px; /* Yazı boyutu */
    }


        input[type="submit"]:hover {
            background-color: white; /* Hover rengi */
        }

    .center-form {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    .form-group {
        margin-bottom: 10px;
    }

    /* Genişlik ayarları */
    .input-group {
        max-width: 300px;
        width: 100%;
        margin: 0 auto;
    }

    /* Input alanlarının genişlik ayarı */
    input[type="text"],
    input[type="submit"] {
        width: 100%;
        box-sizing: border-box; /* Padding ve border'ı içeriye alır */
    }

    body {
        background-image: url('https://i.pinimg.com/474x/14/b6/70/14b670f183eb1a0ea98d5379f36edd86.jpg'); /* Arkaplan resminin URL'sini buraya ekleyin */
        background-size: inherit; /* Resmi ekran boyutuna uyacak şekilde ölçeklendir */
        background-position: center; /* Resmi ortala */
    }
</style>




<h1>ARA</h1>

@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <p style="color: red;">@ViewBag.Error</p>
}

<div class="center-form">
    <form asp-controller="first" asp-action="Index" method="post" class="input-group">
        <div class="form-group">

            <input type="text" id="search" name="search" style="padding: 8px;">
        </div>
        <div class="form-group">
            <input type="submit" value="ARA">
        </div>
    </form>

    <form asp-controller="first" asp-action="Index2" method="post" class="input-group">
        <div class="form-group"></div> <!-- Boş alan -->
        <div class="form-group">
            <input type="hidden" name="id" value=0 />
            <input type="hidden" name="search_yayin_adi" value="" />
            <input type="submit" value="Kaydettiğim Makaleler">
        </div>
    </form>
</div>